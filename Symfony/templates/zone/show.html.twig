{% extends 'base.html.twig' %}

{% block title %}{{ zone.nom }} - Brasil Burger{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-map-marker-alt me-2"></i>{{ zone.nom }}</h1>
    <div>
        <a href="{{ path('app_zone_edit', {'id': zone.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Modifier
        </a>
        <a href="{{ path('app_zone_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Retour
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Nom :</strong></div>
                    <div class="col-sm-9">{{ zone.nom }}</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Prix de livraison :</strong></div>
                    <div class="col-sm-9">
                        <span class="h4 text-brasil-green">{{ zone.prixLivraison|number_format(0, '', '') }} FCFA</span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Statut :</strong></div>
                    <div class="col-sm-9">
                        <span class="badge {{ zone.actif ? 'bg-success' : 'bg-secondary' }}">
                            {{ zone.actif ? 'Active' : 'Inactive' }}
                        </span>
                    </div>
                </div>

                {% if zone.quartiersArray %}
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Quartiers :</strong></div>
                    <div class="col-sm-9">
                        <div class="d-flex flex-wrap gap-2">
                            {% for quartier in zone.quartiersArray %}
                                <span class="badge bg-light text-dark">{{ quartier }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endif %}

                <hr>

                <div class="d-flex gap-2">
                    <form method="post" action="{{ path('app_zone_delete', {'id': zone.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone.id) }}">
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Supprimer dÃ©finitivement cette zone ?')">
                            <i class="fas fa-trash me-1"></i>Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-1"></i>Statistiques</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="h3 text-primary">{{ zone.commandes|length }}</div>
                    <div class="text-muted">Commandes total</div>
                </div>
                
                <hr>
                
                <div class="small text-muted">
                    <p>Cette zone couvre {{ zone.quartiersArray|length }} quartier(s) et a un prix de livraison de {{ zone.prixLivraison|number_format(0, '', '') }} FCFA.</p>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
