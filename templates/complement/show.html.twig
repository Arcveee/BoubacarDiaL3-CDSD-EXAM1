{% extends 'base.html.twig' %}

{% block title %}Complément {{ complement.nom }} - Brasil Burger{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ complement.nom }}</h1>
    <div>
        <a href="{{ path('app_complement_edit', {'id': complement.id}) }}" class="btn btn-outline-secondary">Éditer</a>
        <a href="{{ path('app_complement_index') }}" class="btn btn-outline-secondary">Retour</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Prix:</strong> {{ complement.prix|number_format(0,'','') }} FCFA</p>
        <p><strong>Actif:</strong> {{ complement.isActif() ? 'Oui' : 'Non' }}</p>
    </div>
</div>

{% endblock %}
