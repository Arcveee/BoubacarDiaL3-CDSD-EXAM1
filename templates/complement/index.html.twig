{% extends 'base.html.twig' %}

{% block title %}Compléments - Brasil Burger{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Compléments</h1>
    <a href="{{ path('app_complement_new') }}" class="btn btn-brasil">Nouveau Complément</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        {% if complements %}
            <ul class="list-group">
                {% for c in complements %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{ c.nom }}</strong>
                            <div><small class="text-muted">{{ c.prix|number_format(0,'','') }} FCFA</small></div>
                        </div>
                        <div>
                            <a href="{{ path('app_complement_show', {'id': c.id}) }}" class="btn btn-outline-primary btn-sm">Voir</a>
                            <a href="{{ path('app_complement_edit', {'id': c.id}) }}" class="btn btn-outline-secondary btn-sm">Éditer</a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="alert alert-info">Aucun complément trouvé.</div>
        {% endif %}
    </div>
</div>

{% endblock %}
