{% extends 'base.html.twig' %}

{% block title %}Gestion des Zones - Brasil Burger{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des Zones de Livraison</h1>
    <a href="{{ path('app_zone_new') }}" class="btn btn-brasil">
        + Nouvelle zone
    </a>
</div>

<div class="row">
    {% for zone in zones %}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title">{{ zone.nom }}</h5>
                        <span class="badge {{ zone.actif ? 'bg-success' : 'bg-secondary' }}">
                            {{ zone.actif ? 'Active' : 'Inactive' }}
                        </span>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Prix de livraison :</span>
                            <strong class="text-brasil-green">{{ zone.prixLivraison|number_format(0, '', '') }} FCFA</strong>
                        </div>
                    </div>

                    {% if zone.quartiersArray %}
                        <div class="mb-3">
                            <h6 class="text-muted">Quartiers couverts :</h6>
                            <div class="d-flex flex-wrap gap-1">
                                {% for quartier in zone.quartiersArray %}
                                    <span class="badge bg-light text-dark">{{ quartier }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <div class="mt-auto">
                        <div class="btn-group w-100" role="group">
                            <a href="{{ path('app_zone_show', {'id': zone.id}) }}" class="btn btn-outline-primary btn-sm">
                                Voir
                            </a>
                            <a href="{{ path('app_zone_edit', {'id': zone.id}) }}" class="btn btn-outline-warning btn-sm">
                                Modifier
                            </a>
                            <form method="post" action="{{ path('app_zone_delete', {'id': zone.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone.id) }}">
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Supprimer cette zone ?')">
                                    Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info text-center">
                Aucune zone de livraison configurée. <a href="{{ path('app_zone_new') }}">Créer la première zone</a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
