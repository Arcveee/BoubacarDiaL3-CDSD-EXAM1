{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits - Brasil Burger{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des Produits</h1>
    <a href="{{ path('app_produit_new') }}" class="btn btn-brasil">
        + Nouveau produit
    </a>
</div>

<!-- Filtres -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="btn-group" role="group">
                    <a href="{{ path('app_produit_index') }}" class="btn {{ current_type is null ? 'btn-brasil' : 'btn-outline-secondary' }}">
                        Tous
                    </a>
                    <a href="{{ path('app_produit_index', {type: 'BURGER'}) }}" class="btn {{ current_type == 'BURGER' ? 'btn-brasil' : 'btn-outline-secondary' }}">
                        Burgers
                    </a>
                    <a href="{{ path('app_produit_index', {type: 'MENU'}) }}" class="btn {{ current_type == 'MENU' ? 'btn-brasil' : 'btn-outline-secondary' }}">
                        Menus
                    </a>
                    <a href="{{ path('app_produit_index', {type: 'COMPLEMENT'}) }}" class="btn {{ current_type == 'COMPLEMENT' ? 'btn-brasil' : 'btn-outline-secondary' }}">
                        Compléments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Liste des produits -->
<div class="row">
    {% for produit in produits %}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                {% if produit.image %}
                    <img src="{{ produit.image }}" class="card-img-top" style="height: 200px; object-fit: cover;" alt="{{ produit.nom }}">
                {% else %}
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span class="text-muted">Pas d'image</span>
                    </div>
                {% endif %}
                
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                    </div>
                    
                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="h5 text-brasil-green mb-0">{{ produit.prix|number_format(0, '', '') }} FCFA</span>
                            <span class="badge {{ produit.actif ? 'bg-success' : 'bg-secondary' }}">
                                {{ produit.actif ? 'Actif' : 'Archivé' }}
                            </span>
                        </div>
                        
                        <span class="badge bg-{{ produit.type == 'BURGER' ? 'danger' : (produit.type == 'MENU' ? 'warning' : 'info') }} mb-2">
                            {{ produit.type }}
                        </span>
                        
                        <div class="btn-group w-100" role="group">
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-outline-primary btn-sm">
                                Voir
                            </a>
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-outline-warning btn-sm">
                                Modifier
                            </a>
                            {% if produit.actif %}
                                <form method="post" action="{{ path('app_produit_archive', {'id': produit.id}) }}" class="d-inline">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm" onclick="return confirm('Archiver ce produit ?')">
                                        Archiver
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info text-center">
                Aucun produit trouvé. <a href="{{ path('app_produit_new') }}">Créer le premier produit</a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
