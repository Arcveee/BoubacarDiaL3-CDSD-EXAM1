{% extends 'base.html.twig' %}

{% block title %}Dashboard - Brasil Burger{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h1>
    <form method="get" class="d-flex">
        <input type="date" name="date" class="form-control form-control-sm me-2" value="{{ selected_date }}">
        <button class="btn btn-sm btn-primary">Filtrer</button>
    </form>
</div>

<!-- Résumé du jour -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                <h3 class="card-title">{{ stats.EN_COURS }}</h3>
                <p class="card-text text-muted">En cours</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="fas fa-check-circle fa-2x text-info mb-2"></i>
                <h3 class="card-title">{{ stats.VALIDEE }}</h3>
                <p class="card-text text-muted">Validées</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="fas fa-utensils fa-2x text-primary mb-2"></i>
                <h3 class="card-title">{{ stats.PREPAREE }}</h3>
                <p class="card-text text-muted">Préparées</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="fas fa-thumbs-up fa-2x text-success mb-2"></i>
                <h3 class="card-title">{{ stats.TERMINEE }}</h3>
                <p class="card-text text-muted">Terminées</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="fas fa-times-circle fa-2x text-danger mb-2"></i>
                <h3 class="card-title">{{ stats.ANNULEE }}</h3>
                <p class="card-text text-muted">Annulées</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center shadow-sm bg-brasil-green text-white">
            <div class="card-body">
                    <i class="fas fa-money-bill-wave fa-2x mb-2"></i>
                    <h3 class="card-title">{{ stats.recette_journaliere|number_format(0, '', '') }} FCFA</h3>
                <p class="card-text">Recettes</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Top produits vendus -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-brasil-orange text-white">
                <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Top Produits Vendus</h5>
            </div>
            <div class="card-body">
                {% if top_produits %}
                    {% for produit in top_produits %}
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <strong>{{ produit.nom }}</strong>
                                <span class="badge bg-secondary">BURGER</span>
                            </div>
                            <div>
                                <span class="badge bg-success">{{ produit.total_vendu ?? 0 }} vendus</span>
                            </div>
                        </div>
                        <div class="progress mb-3" style="height: 8px;">
                            <div class="progress-bar bg-brasil-orange" style="width: {{ (produit.total_vendu ?? 0) * 10 }}%"></div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-muted">Aucune donnée disponible</p>
                {% endif %}
            </div>
        </div>
    </div>

    {# Alerts removed #}
    </div>

{% endblock %}
