{% extends 'base.html.twig' %}

{% block title %}Menu {{ menu.nom }} - Brasil Burger{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ menu.nom }}</h1>
    <div>
        <a href="{{ path('app_menu_edit', {'id': menu.id}) }}" class="btn btn-outline-secondary">Ã‰diter</a>
        <a href="{{ path('app_menu_index') }}" class="btn btn-outline-secondary">Retour</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Actif:</strong> {{ menu.isActif() ? 'Oui' : 'Non' }}</p>
        <p><strong>Burgers:</strong></p>
        <ul>
            {% for b in menu.burgers %}
                <li>{{ b.nom }}</li>
            {% else %}
                <li class="text-muted">Aucun burger</li>
            {% endfor %}
        </ul>
    </div>
</div>

{% endblock %}
