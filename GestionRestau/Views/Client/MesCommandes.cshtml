@model IEnumerable<BrasilBurger.Web.Models.Entities.Commande>

@{
    ViewData["Title"] = "Mes Commandes";
}

<div class="row">
    <div class="col-md-12">
        <h2><i class="fas fa-list"></i> Mes Commandes</h2>
        <hr />

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Vous n'avez pas encore passé de commande.
                <a asp-controller="Catalogue" asp-action="Index" class="alert-link">Découvrir notre catalogue</a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var commande in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-receipt"></i> Commande #@commande.IdCommande</span>
                                @switch (commande.EtatCommande)
                                {
                                    case BrasilBurger.Web.Models.Enums.EtatCommande.EN_COURS:
                                        <span class="badge bg-warning">En cours</span>
                                        break;
                                    case BrasilBurger.Web.Models.Enums.EtatCommande.VALIDEE:
                                        <span class="badge bg-info">Validée</span>
                                        break;
                                    case BrasilBurger.Web.Models.Enums.EtatCommande.PREPAREE:
                                        <span class="badge bg-secondary">En préparation</span>
                                        break;
                                    case BrasilBurger.Web.Models.Enums.EtatCommande.TERMINEE:
                                        <span class="badge bg-success">Terminée</span>
                                        break;
                                    case BrasilBurger.Web.Models.Enums.EtatCommande.ANNULEE:
                                        <span class="badge bg-danger">Annulée</span>
                                        break;
                                }
                            </div>
                            <div class="card-body">
                                <p><strong><i class="fas fa-calendar"></i> Date :</strong> @commande.DateCommande.ToString("dd/MM/yyyy HH:mm")</p>
                                <p><strong><i class="fas fa-box"></i> Mode :</strong>
                                    @switch (commande.ModeConsommation)
                                    {
                                        case BrasilBurger.Web.Models.Enums.ModeConsommation.SUR_PLACE:
                                            <span>Sur place</span>
                                            break;
                                        case BrasilBurger.Web.Models.Enums.ModeConsommation.EMPORTE:
                                            <span>À emporter</span>
                                            break;
                                        case BrasilBurger.Web.Models.Enums.ModeConsommation.LIVRAISON:
                                            <span>Livraison</span>
                                            break;
                                    }
                                </p>
                                <p><strong><i class="fas fa-shopping-basket"></i> Articles :</strong> @commande.LignesCommande.Count</p>
                                <p class="text-danger fw-bold"><strong><i class="fas fa-money-bill-wave"></i> Total :</strong> @((int)commande.Total) FCFA</p>
                                @if (commande.Paiement != null)
                                {
                                    <p><strong><i class="fas fa-credit-card"></i> Paiement :</strong>
                                        @switch (commande.Paiement.ModePaiement)
                                        {
                                            case BrasilBurger.Web.Models.Enums.ModePaiement.WAVE:
                                                <span class="badge bg-warning text-dark">Wave</span>
                                                break;
                                            case BrasilBurger.Web.Models.Enums.ModePaiement.OM:
                                                <span class="badge bg-danger">Orange Money</span>
                                                break;
                                        }
                                    </p>
                                }
                                <div class="mt-3">
                                    <a asp-action="DetailsCommande" asp-route-id="@commande.IdCommande" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
