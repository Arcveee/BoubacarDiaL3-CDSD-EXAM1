@{
    ViewData["Title"] = "Catalogue";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-utensils"></i> Notre Catalogue</h2>
        <hr />

        <div class="btn-group mb-4" role="group">
            <a asp-action="Index" class="btn @(ViewBag.Filtre == null ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-th"></i> Tous
            </a>
            <a asp-action="Index" asp-route-filtre="burgers" class="btn @(ViewBag.Filtre == "burgers" ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-hamburger"></i> Burgers
            </a>
            <a asp-action="Index" asp-route-filtre="menus" class="btn @(ViewBag.Filtre == "menus" ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-list"></i> Menus
            </a>
        </div>

        @if (ViewBag.Filtre == null)
        {
            <h3 class="mb-3"><i class="fas fa-hamburger text-danger"></i> Burgers</h3>
            <div class="row mb-5">
                @if (ViewBag.Burgers != null)
                {
                    @foreach (var burger in ViewBag.Burgers)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(burger.Image))
                                {
                                    <img src="@burger.Image" class="card-img-top" alt="@burger.Nom" style="height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-hamburger fa-4x"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@burger.Nom</h5>
                                    <p class="card-text text-danger fw-bold fs-5">@burger.Prix.ToString("N0") FCFA</p>
                                    <a asp-action="DetailsBurger" asp-route-id="@burger.IdBurger" class="btn btn-primary w-100">
                                        <i class="fas fa-eye"></i> Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <h3 class="mb-3"><i class="fas fa-list text-success"></i> Menus</h3>
            <div class="row">
                @if (ViewBag.Menus != null)
                {
                    @foreach (var menu in ViewBag.Menus)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(menu.Image))
                                {
                                    <img src="@menu.Image" class="card-img-top" alt="@menu.Nom" style="height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-success text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-list fa-4x"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@menu.Nom</h5>
                                    <p class="text-muted small">
                                        <i class="fas fa-info-circle"></i> @menu.MenuBurgers.Count burger(s)
                                    </p>
                                    <p class="card-text text-success fw-bold fs-5">@menu.Prix.ToString("N0") FCFA</p>
                                    <a asp-action="DetailsMenu" asp-route-id="@menu.IdMenu" class="btn btn-success w-100">
                                        <i class="fas fa-eye"></i> Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else if (ViewBag.Filtre == "burgers")
        {
            <div class="row">
                @if (ViewBag.Produits != null)
                {
                    @foreach (var burger in ViewBag.Produits)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(burger.Image))
                                {
                                    <img src="@burger.Image" class="card-img-top" alt="@burger.Nom" style="height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-hamburger fa-4x"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@burger.Nom</h5>
                                    <p class="card-text text-danger fw-bold fs-5">@burger.Prix.ToString("N0") FCFA</p>
                                    <a asp-action="DetailsBurger" asp-route-id="@burger.IdBurger" class="btn btn-primary w-100">
                                        <i class="fas fa-eye"></i> Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else if (ViewBag.Filtre == "menus")
        {
            <div class="row">
                @if (ViewBag.Produits != null)
                {
                    @foreach (var menu in ViewBag.Produits)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(menu.Image))
                                {
                                    <img src="@menu.Image" class="card-img-top" alt="@menu.Nom" style="height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-success text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-list fa-4x"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@menu.Nom</h5>
                                    <p class="text-muted small">
                                        <i class="fas fa-info-circle"></i> @menu.MenuBurgers.Count burger(s)
                                    </p>
                                    <p class="card-text text-success fw-bold fs-5">@menu.Prix.ToString("N0") FCFA</p>
                                    <a asp-action="DetailsMenu" asp-route-id="@menu.IdMenu" class="btn btn-success w-100">
                                        <i class="fas fa-eye"></i> Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
</div>
