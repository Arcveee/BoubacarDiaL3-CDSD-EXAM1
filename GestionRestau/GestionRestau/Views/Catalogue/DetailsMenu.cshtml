@model BrasilBurger.Web.Models.Entities.Menu

@{
    ViewData["Title"] = Model.Nom;
}

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" class="img-fluid rounded shadow" alt="@Model.Nom" />
        }
        else
        {
            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow" style="height: 400px;">
                <i class="fas fa-utensils fa-10x"></i>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h2>@Model.Nom</h2>
        <hr />
        <h3 class="text-danger">@Model.Prix.ToString("N0") FCFA</h3>

        <div class="mt-4">
            <h5><i class="fas fa-hamburger"></i> Burgers inclus :</h5>
            <ul class="list-group mb-4">
                @foreach (var menuBurger in Model.MenuBurgers)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @menuBurger.Burger.Nom
                        <span class="badge bg-danger rounded-pill">@menuBurger.Burger.Prix.ToString("N0") FCFA</span>
                    </li>
                }
            </ul>
        </div>

        <form asp-controller="Commande" asp-action="AjouterAuPanier" method="post" class="mt-4">
            <input type="hidden" name="produitId" value="@Model.IdMenu" />
            <input type="hidden" name="typeProduit" value="@((int)BrasilBurger.Web.Models.Enums.TypeProduit.MENU)" />

            <div class="mb-3">
                <label class="form-label fw-bold">Quantité</label>
                <input type="number" name="quantite" class="form-control" value="1" min="1" max="10" />
            </div>

            @if (ViewBag.Complements != null && ((IEnumerable<BrasilBurger.Web.Models.Entities.Complement>)ViewBag.Complements).Any())
            {
                <div class="mb-3">
                    <label class="form-label fw-bold">Compléments (optionnel)</label>
                    @foreach (var complement in (IEnumerable<BrasilBurger.Web.Models.Entities.Complement>)ViewBag.Complements)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="complementIds" value="@complement.IdComplement" id="complement@(complement.IdComplement)" />
                            <label class="form-check-label" for="complement@(complement.IdComplement)">
                                @complement.Nom (+@complement.Prix.ToString("N0") FCFA)
                            </label>
                        </div>
                    }
                </div>
            }

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-cart-plus"></i> Ajouter au panier
                </button>
            </div>
        </form>

        <div class="mt-3">
            <a asp-controller="Catalogue" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour au catalogue
            </a>
        </div>
    </div>
</div>
